# ============================================
# PANDIVER FRONTEND ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env.local and modify the values as needed
# IMPORTANT: Never commit the actual .env.local file to version control

# ============================================
# API CONFIGURATION
# ============================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3

# ============================================
# AUTHENTICATION SETTINGS
# ============================================
NEXT_PUBLIC_JWT_STORAGE_KEY=pandiver_token
NEXT_PUBLIC_REFRESH_TOKEN_KEY=pandiver_refresh_token
NEXT_PUBLIC_TOKEN_EXPIRE_WARNING_MINUTES=5
NEXT_PUBLIC_AUTO_LOGOUT_INACTIVE_MINUTES=60

# ============================================
# APPLICATION SETTINGS
# ============================================
NEXT_PUBLIC_APP_NAME="Pandiver - Smart PDF Parser"
NEXT_PUBLIC_APP_VERSION="2025.07.24.01"
NEXT_PUBLIC_COMPANY_NAME="Pandiver"
NEXT_PUBLIC_SUPPORT_EMAIL="support@pandiver.com"

# ============================================
# PDF PROCESSING SETTINGS
# ============================================
NEXT_PUBLIC_MAX_FILE_SIZE_MB=50
NEXT_PUBLIC_ALLOWED_FILE_TYPES=".pdf"
NEXT_PUBLIC_MAX_FILES_PER_UPLOAD=5
NEXT_PUBLIC_PDF_PREVIEW_ENABLED=true

# ============================================
# UI/UX CONFIGURATION
# ============================================
NEXT_PUBLIC_THEME_DEFAULT="light"
NEXT_PUBLIC_SIDEBAR_COLLAPSED_DEFAULT=false
NEXT_PUBLIC_TABLE_PAGE_SIZE_DEFAULT=25
NEXT_PUBLIC_TOAST_DURATION_MS=4000

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_SMART_PDF_PARSER_ENABLED=true
NEXT_PUBLIC_BANK_STATEMENT_PARSER_ENABLED=true
NEXT_PUBLIC_DOCUMENT_ANALYZER_ENABLED=false
NEXT_PUBLIC_DATA_VISUALIZER_ENABLED=false
NEXT_PUBLIC_BULK_PROCESSING_ENABLED=true
NEXT_PUBLIC_EXPORT_FEATURES_ENABLED=true

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_SHOW_DEV_TOOLS=true
NEXT_PUBLIC_LOG_LEVEL="info"
NEXT_PUBLIC_ERROR_BOUNDARY_ENABLED=true

# ============================================
# PERFORMANCE SETTINGS
# ============================================
NEXT_PUBLIC_LAZY_LOADING_ENABLED=true
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_BUNDLE_ANALYZER=false
NEXT_PUBLIC_CACHE_DURATION_HOURS=24

# ============================================
# SECURITY SETTINGS
# ============================================
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_SECURE_COOKIES=false
NEXT_PUBLIC_SAME_SITE_COOKIES="lax"

# ============================================
# ANALYTICS & MONITORING (Optional)
# ============================================
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""
# NEXT_PUBLIC_SENTRY_DSN=""
# NEXT_PUBLIC_HOTJAR_ID=""

# ============================================
# SOCIAL/EXTERNAL LINKS
# ============================================
NEXT_PUBLIC_GITHUB_URL="https://github.com/ameetmund/pandiver-new"
NEXT_PUBLIC_DOCUMENTATION_URL="https://docs.pandiver.com"
NEXT_PUBLIC_SUPPORT_URL="https://support.pandiver.com"

# ============================================
# TABLE/DATA PROCESSING
# ============================================
NEXT_PUBLIC_MAX_TABLE_ROWS=1000
NEXT_PUBLIC_MAX_TABLE_COLUMNS=50
NEXT_PUBLIC_AUTO_SAVE_INTERVAL_MS=30000
NEXT_PUBLIC_UNDO_REDO_STACK_SIZE=50